<script type="text/x-handlebars" data-template-name="app-tpl">
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="brand" href="#">Scorer</a>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="span12">
      {{outlet}}
    </div>
  </div>
</script>

<script type="text/x-handlebars" data-template-name="select-team-tpl">
  <div class="span6">
    <div class="team team-{{unbound view.contentIndex}} well">
      <i class="icon-ok-sign"></i>
      <h3>Team {{view.niceIndex}}</h3>
      <ul>
        {{#each p in view.players}}
          <li><a {{action togglePlayer p}} class="btn" data-team="team-{{unbound view.niceIndex}}" data-player-handle="{{unbound p.handle}}">{{p.fullName}}</a></li>
        {{/each}}
      </ul>
    </div>
  </div>
</script>

<script type="text/x-handlebars" data-template-name="game-tpl">
  <div class="row">
    <div class="span12">
      <div class="well">
        <a {{action finishMatch}} class="btn finish-match">Finish match <i class="icon-chevron-right"></i></a>
      </div>
    </div>
    </div>
    <div class="row">
      <div class="span12">
        <ul class="game">
          <li><a {{action pointWon}} class="score-1">{{controller.game.score1}}</a></li>
          <li><a {{action pointWon}} class="score-2">{{controller.game.score2}}</a></li>
        </ul>
      </div>
    </div>
  </div>
</script>

